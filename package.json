{
  "name": "pitch-deck",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade pitch deck platform with investor gate and multi-tenant architecture",
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "dev": "turbo run dev",
    "prebuild": "pnpm --filter web db:generate",
    "build": "pnpm --filter web build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:push": "pnpm --filter web db:push",
    "seed": "pnpm --filter web seed"
  },
  "dependencies": {
    "@prisma/client": "^5.8.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "turbo": "^1.12.1",
    "typescript": "^5.3.3"
  }
}
