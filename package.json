{
  "name": "pitch-deck",
  "version": "1.0.0",
  "private": true,
  "description": "Production-grade pitch deck platform with investor gate and multi-tenant architecture",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "turbo run dev",
    "build": "cd apps/web && npm run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:push": "cd apps/web && pnpm db:push",
    "seed": "cd apps/web && pnpm seed"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "prettier": "^3.2.4",
    "turbo": "^1.12.1",
    "typescript": "^5.3.3"
  }
}
